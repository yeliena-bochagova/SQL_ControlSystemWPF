            <Button  Style="{DynamicResource ButtonStyleMenu}" x:Name="SaveButton" Content="Save" Click="SaveButton_Click" ToolTip="Save results to a CSV file" Background="#FFD1E53D" Grid.Column="1" Margin="944,251,6,115"/>
