         Opacity="0.9" 
         Style="{DynamicResource ButtonStyleMenu}" 
         x:Name="DeleteTableButton" 
         Click="DeleteTableButton_Click" 
         Content="Delete" 
         HorizontalAlignment="Left" 
         Height="30" 
         Margin="87,0,0,0" 
